import java.util.Scanner;

// ===== Base Class: Publisher =====
class Publisher {
    protected String publisherName;
    protected int publisherId;

    // Method to get publisher data
    public void getdata(Scanner sc) {
        System.out.print("Enter Publisher ID: ");
        publisherId = sc.nextInt();
        sc.nextLine(); // consume newline

        System.out.print("Enter Publisher Name: ");
        publisherName = sc.nextLine();
    }

    // Method to show publisher data
    public void showdata() {
        System.out.println("\n--- Publisher Details ---");
        System.out.println("Publisher ID   : " + publisherId);
        System.out.println("Publisher Name : " + publisherName);
    }
}

// ===== Subclass: Book (inherits from Publisher) =====
class Book extends Publisher {
    private String bookName;
    private int bookId;
    private String authorName;

    // Method to get book data
    public void getdata(Scanner sc) {
        super.getdata(sc); // call publisher input first

        System.out.print("Enter Book ID: ");
        bookId = sc.nextInt();
        sc.nextLine(); // consume newline

        System.out.print("Enter Book Name: ");
        bookName = sc.nextLine();

        System.out.print("Enter Author Name: ");
        authorName = sc.nextLine();
    }

    // Method to display all data
    public void showdata() {
        super.showdata(); // show publisher data first
        System.out.println("\n--- Book Details ---");
        System.out.println("Book ID     : " + bookId);
        System.out.println("Book Name   : " + bookName);
        System.out.println("Author Name : " + authorName);
    }
}

// ===== Main Class (contains main method) =====
public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        Book b = new Book();

        System.out.println("=== Enter Publisher and Book Details ===");
        b.getdata(sc);

        System.out.println("\n=== Displaying Details ===");
        b.showdata();

        sc.close();
    }
}
